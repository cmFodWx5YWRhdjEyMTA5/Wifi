<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="https://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- SSID: HP-Print-e0-LaserJet 400 color, BSSID: d8:5d:e2:2d:8b:e0, capabilities: , level: -69, frequency: 2462, timestamp: 958900558000 -->

            <TextView
                tools:text="HP-Print-e0-LaserJet 400 color"
                android:id="@+id/ssid_textview"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                />

            <TextView
                tools:text="d8:5d:e2:2d:8b:e0"
                android:id="@+id/bssid_textview"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ssid_textview"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="16dp"
                />

            <TextView
                tools:text="Level: -69"
                android:id="@+id/level_textview"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ssid_textview"
                android:layout_toRightOf="@+id/bssid_textview"
                android:layout_marginRight="16dp"
                />

            <TextView
                tools:text="Freq: 2462"
                android:id="@+id/freq_textview"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ssid_textview"
                android:layout_toRightOf="@+id/level_textview"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>